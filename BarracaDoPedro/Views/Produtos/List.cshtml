@model IEnumerable<BarracaDoPedro.Models.Produto>


@{
    ViewData["Title"] = "List";
}

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-sm-3 col-lg-3 col-md-3">
            <div class="img-thumbnail">
                <img src="@produto.Imagem" class="img-rounded" alt="" />
            </div>
            <div class="caption">
                <h3 class="pull-righ"> @produto.Valor.ToString("c")</h3>
                <h3>
                    @produto.Nome
                </h3>
                <p>@produto.Descricao</p>
                <div class="addToCart text-right">
                    <p class="button ">
                        <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemCarrinhoCompra">
                            Incluir no Carrinho
                        </a>
                    </p>
                </div>
            </div>
        </div>

    }
</div>



